{
  "compilerOptions": {
    "module": "ES2022",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": [
      "node"
    ],
  },
  "compileOnSave": true,
  "include": [
    "src",
    "cp-angular.js"
  ]
}